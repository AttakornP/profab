#!/usr/bin/env python
import fabric.network
import logging
import sys

from profab.server import Server


def main(client, *args):
    logging.basicConfig(level=logging.INFO)
    Server.start(client, *args)


if __name__=="__main__":
    try:
        main(*sys.argv[1:])
    finally:
        fabric.network.disconnect_all()

