#!/usr/bin/env python
import logging
import sys

from profab.server import Server


def main(client, hostname):
    logging.basicConfig(level=logging.INFO)
    server = Server.connect(client, hostname)
    if server:
        server.terminate()
    else:
        logging.error("Could not find a server instance")


if __name__=="__main__":
    main(*sys.argv[1:])

